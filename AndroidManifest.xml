<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prajitdas.sprivacy"
    android:versionCode="1"
    android:versionName="1.0" >

	<permission android:name="android.permission.sprivacy.contentprovider.READ_WRITE_POLICIES"
        android:label="@string/permlabel_read_write_content"
        android:description="@string/permdesc_read_write_content"
        android:protectionLevel="normal" />
    
	<permission android:name="android.permission.sprivacy.policyprovider.READ_POLICIES"
        android:label="@string/permlabel_read_policy"
        android:description="@string/permdesc_read_policy"
        android:protectionLevel="normal" />
	
	<permission android:name="android.permission.sprivacy.policyprovider.WRITE_POLICIES"
        android:label="@string/permlabel_write_policy"
        android:description="@string/permdesc_write_policy"
        android:protectionLevel="normal" />
	
	<uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Required permission for reading the privacy policies -->
    <uses-permission android:name="android.permission.sprivacy.policyprovider.READ_POLICIES" />    
    <!-- Required permission not required at or below Android 4.3 API level -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Unusual but true! -->
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.prajitdas.sprivacy.policyprovider.PolicyRuleChooserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<provider android:name="com.prajitdas.sprivacy.policyprovider.PolicyProvider" 
			android:authorities="com.prajitdas.sprivacy.policyprovider.Policy"
            android:label="@string/policy_provider_label"
            android:exported="true"
			android:readPermission="android.permission.sprivacy.policyprovider.READ_POLICIES"
            android:writePermission="android.permission.sprivacy.policyprovider.WRITE_POLICIES" >
		</provider>
		
		<provider android:name="com.prajitdas.sprivacy.contentprovider.SContentProvider" 
			android:authorities="com.prajitdas.sprivacy.contentprovider.Content"
            android:label="@string/content_provider_label"
			android:exported="true" 
			android:permission="android.permission.sprivacy.contentprovider.READ_WRITE_POLICIES" >
		</provider>
    </application>

</manifest>