<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prajitdas.privacypolicy"
    android:versionCode="1"
    android:versionName="1.0" >

    <permission android:description="@string/sprivacy_read_permission_description"
            android:label="@string/sprivacy_read_permission_label"
            android:name="android.permission.privacyPolicy.READ_POLICIES"
            android:protectionLevel="normal" />
    
    <permission android:description="@string/sprivacy_write_permission_description"
            android:label="@string/sprivacy_write_permission_label"
            android:name="android.permission.privacyPolicy.WRITE_POLICIES"
            android:protectionLevel="normal" />
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.prajitdas.privacypolicy.control.PolicyRuleChooserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<provider android:name="PolicyProvider" 
			android:authorities="com.prajitdas.privacypolicy"
            android:label="@string/provider_label"
            android:multiprocess="false"
            android:exported="true"
            android:readPermission="android.permission.privacyPolicy.READ_POLICIES"
            android:writePermission="android.permission.privacyPolicy.WRITE_POLICIES">
		</provider>
	</application>

</manifest>