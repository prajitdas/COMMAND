<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prajitdas.sprivacy"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.prajitdas.sprivacy.policyprovider.PolicyRuleChooserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<provider android:name="com.prajitdas.sprivacy.policyprovider.PolicyProvider" 
			android:authorities="com.prajitdas.sprivacy.policyprovider.Policy"
            android:label="@string/provider_label"
            android:multiprocess="false"
            android:exported="true"
			android:readPermission="android.permission.sprivacy.policyprovider.READ_POLICIES"
            android:writePermission="android.permission.sprivacy.policyprovider.WRITE_POLICIES" />

	</application>

</manifest>